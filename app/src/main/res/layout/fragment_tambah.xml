<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".TambahFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tambah Kantin"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:text="Nama Kantin"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_text_nama_kantin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edt_text2"
                android:hint="Nama kantin"
                android:maxLines="1"
                android:paddingLeft="15dp">

            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Nama Pemilik"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_text_nama"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edt_text2"
                android:hint="Nama"
                android:maxLines="1"
                android:paddingLeft="15dp">

            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Jumlah Anak"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_text_jumlah_anak"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edt_text2"
                android:hint="Jumlah anak"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="15dp">

            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Alamat"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_text_alamat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edt_text2"
                android:hint="Alamat"
                android:maxLines="1"
                android:paddingLeft="15dp">

            </com.google.android.material.textfield.TextInputEditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Kebutuhan (Rp)"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_text_gaji"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edt_text2"
                android:hint="Kebutuhan per bulan"
                android:inputType="number"
                android:maxLines="1"
                android:paddingLeft="15dp">

            </com.google.android.material.textfield.TextInputEditText>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn2"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Save"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>